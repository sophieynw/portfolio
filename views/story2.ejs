<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body class="frame">
    <%- include("./partials/header") %>
    <main>
      <div class="content">
        <% stories.forEach((story) => { %>
        <article class="story">
          <div class="story_text">
            <div class="story_head">
              <p>
                <% if (story.link) { %>
                <a href="<%= story.link %>" target="_blank"
                  ><%= story.event %></a
                >
                <% } else { %> <%= story.event %> <% } %>
              </p>
              <p><%= story.date %></p>
            </div>
            <p class="story_body"><%= story.description %></p>
          </div>
          <div class="story_img">
            <% if (story.img) { %>
                <img src="<%= story.img %>" alt="<%= story.imgDesc %>">
            <% } else { %>
                <img src="/images/blank.png" alt="">
            <% } %>
          </div>
        </article>
        <% }) %>
      </div>
    </main>
    <%- include("./partials/footer") %>
  </body>
</html>
